{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./build/",
        "rootDir": "./src/",
        "baseUrl": "./src/",
        "paths": {
            "@Communication/*": ["communication/*"],
            "@Database/*": ["database/*"],
            "@Interfaces/*": ["interfaces/*"],
            "@Server/*": ["server/*"],
            "@SHabbo": ["SHabbo.ts"],
        },
    },
    "exclude": [
        "./node_modules/",
    ],
    "include": [
        "./src/"
    ],
}