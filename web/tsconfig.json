{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": ["DOM", "DOM.Iterable"],
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "outDir": "./build/",
        "baseUrl": "./src/",
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types",
        ],
    },
    "exclude": [
        "./node_modules/",
    ],
    "include": [
        "./src/",
    ],
}